<?xml version="1.0" encoding="UTF-8"?>
 
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.plugin.echo"
      version="0.1.0">
    <name>Echo</name>
    <description>Sample PhoneGap Echo Plugin</description>
    <license>AAK</license>
    <keywords>phonegap,calendar</keywords>
 
 
    <js-module src="www/echo.js" name="Echo">
        <clobbers target="window.echo" />
    </js-module>
 
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Echo">
                <param name="android-package" value="com.plugin.echo.Echo"/>
            </feature>
        </config-file>
 
        <source-file src="src/android/Echo.java" target-dir="src/com/plugin/echo" />      
     </platform>          
</plugin>